<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/mainWhite">

    <ImageView
        android:id="@+id/ivFilters"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_vector_settings_filters_header"
        android:contentDescription="User Avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvFiltersHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Filters Menu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivFilters"/>

    <TextView
        android:id="@+id/tvSliderSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Salary Filter"
        android:textSize="20sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:valueFrom="0"
        android:valueTo="5000"
        android:stepSize="100"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSliderSalary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/chbFilter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Filter CheckBox1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/sliderSalary"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/chbFilter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Filter CheckBox2"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/chbFilter1"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/chbFilter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Filter CheckBox3"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/chbFilter2"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/applyFiltersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Apply Filters"
        app:layout_constraintTop_toBottomOf="@id/chbFilter3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>